<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.MainActivity">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:fontFamily="@font/lato_black"
        android:text="Giám sát an ninh"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_history"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_margin="@dimen/size_20"
        android:src="@drawable/ic_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/bg_card"
        app:cardCornerRadius="@dimen/size_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card">

            <ImageView
                android:id="@+id/ic_header"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_marginStart="@dimen/size_20"
                android:src="@drawable/ic_warning"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20"
                android:fontFamily="@font/lato_bold"
                android:text="Phát hiện kẻ lạ - 2 phút trước"
                android:textColor="#E33A3A"
                android:textSize="@dimen/font_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ic_header"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_inf"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_header">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/size_1"
            android:layout_marginStart="@dimen/size_1"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/size_5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic_camera"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginStart="@dimen/size_20"
                    android:src="@drawable/ic_camera_active"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_10"
                    android:fontFamily="@font/lato_bold"
                    android:text="Trạng thái"
                    android:textSize="@dimen/font_16"
                    app:layout_constraintStart_toEndOf="@+id/ic_camera"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginBottom="@dimen/size_10"
                    android:fontFamily="@font/lato_bold"
                    android:text="Đang hoạt động"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ic_camera" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/size_1"
            android:layout_marginEnd="@dimen/size_1"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/size_5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic_people"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginStart="@dimen/size_20"
                    android:src="@drawable/ic_people"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_10"
                    android:fontFamily="@font/lato_bold"
                    android:text="Phát hiện"
                    android:textSize="@dimen/font_16"
                    app:layout_constraintStart_toEndOf="@+id/ic_people"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginBottom="@dimen/size_10"
                    android:fontFamily="@font/lato_bold"
                    android:text="0 người"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/font_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ic_people" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/container_stream"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        app:cardCornerRadius="@dimen/size_5"
        app:layout_constraintTop_toBottomOf="@+id/layout_inf">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card"
            android:backgroundTint="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_stream"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/black"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/red"
                    app:cardCornerRadius="@dimen/size_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:text="TRỰC TIẾP"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/ic_camera_stream"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginTop="@dimen/size_60"
                    android:src="@drawable/ic_camera_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Camera Master"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ic_camera_stream"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Nhấn để xem toàn màn hình"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_name_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_black"
                android:text="Camera Master"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_stream" />

            <TextView
                android:id="@+id/tv_camera_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginTop="@dimen/size_5"
                android:fontFamily="@font/lato_bold"
                android:text="Camera chính - HD 1080p"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_camera" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_list_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_20"
        android:fontFamily="@font/lato_black"
        android:text="Danh sách camera"
        android:textColor="@color/black"
        android:textSize="@dimen/size_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_stream" />

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_camera_master"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/bg_card"
        app:cardCornerRadius="@dimen/size_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_camera">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/size_15"
                android:layout_height="@dimen/size_15"
                android:backgroundTint="@color/green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="@dimen/size_10" />

            <TextView
                android:id="@+id/tv_name_camera_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_black"
                android:text="Camera Master"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/lato_bold"
                android:text="Camera chính - HD 1080p"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/size_20"

                android:layout_marginEnd="@dimen/size_20"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="@dimen/size_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:text="Hoạt động"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_slaver_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/bg_card"
        app:cardCornerRadius="@dimen/size_5"
        app:layout_constraintTop_toBottomOf="@+id/layout_camera_master">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/size_15"
                android:layout_height="@dimen/size_15"
                android:backgroundTint="@color/green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="@dimen/size_10" />
            <TextView
                android:id="@+id/tv_name_camera_slaver_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_black"
                android:text="Slaver 01"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/lato_bold"
                android:text="Camera trái - HD 720p"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/size_20"

                android:layout_marginEnd="@dimen/size_20"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="@dimen/size_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:text="Hoạt động"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_slaver_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/bg_card"
        app:cardCornerRadius="@dimen/size_5"
        app:layout_constraintTop_toBottomOf="@+id/layout_slaver_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/size_15"
                android:layout_height="@dimen/size_15"
                android:backgroundTint="@color/green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="@dimen/size_10" />
            <TextView
                android:id="@+id/tv_name_camera_slaver_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_black"
                android:text="Slaver 02"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginBottom="15sp"
                android:fontFamily="@font/lato_bold"
                android:text="Camera chính - HD 720p"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/size_20"

                android:layout_marginEnd="@dimen/size_20"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="@dimen/size_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:text="Hoạt động"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>